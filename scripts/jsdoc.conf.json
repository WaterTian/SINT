{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./src/"
        ],
        // "exclude": [
        //     "./src/polyfill/"
        // ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "./node_modules/jsdoc/plugins/markdown",
        "./scripts/jsdoc-fix"
    ],
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : false
        },
        "applicationName": "Sint.JS",
        "footer"        : "Made with ♥ by SintLab (sintlab.com)",
        "copyright"     : "SintJS Copyright © 2018-2019 Mat Groves.",
        "disqus": "",
        "openGraph": {
            "title": "",
            "type": "website",
            "image": "",
            "site_name": "",
            "url": ""
        },
        "meta": {
            "title": "sint.js API Documentation",
            "description": "Documentation for SintJS library",
            "keyword": "docs, documentation, sint, sintjs, renderer, html5, javascript, jsdoc"
        },
        "linenums"      : true
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : false
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/@pixi/jsdoc-template"
    }
}
